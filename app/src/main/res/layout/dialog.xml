<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:textColorHint="#696969"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/dialog_nm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="0dp"
            android:drawableStart="@drawable/ic_phone_book"
            android:drawableLeft="@drawable/ic_phone_book"
            android:drawablePadding="5dp"
            android:enabled="false"
            android:hint="Name"
            android:selectAllOnFocus="false"
            android:textColorHint="#696969"
            android:textSize="14sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_layout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColorHint="#696969"
        app:layout_constraintEnd_toEndOf="@+id/dialog_layout"
        app:layout_constraintStart_toStartOf="@+id/dialog_layout"
        app:layout_constraintTop_toBottomOf="@+id/dialog_layout">

        <EditText
            android:id="@+id/dialog_ph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="0dp"
            android:drawableStart="@drawable/ic_ph_no"
            android:drawableLeft="@drawable/ic_ph_no"
            android:drawablePadding="5dp"
            android:hint="Contact Number"
            android:inputType="phone"
            android:textColorHint="#696969"
            android:textSize="14sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_layout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColorHint="#696969"
        app:layout_constraintEnd_toEndOf="@+id/dialog_layout1"
        app:layout_constraintStart_toStartOf="@+id/dialog_layout1"
        app:layout_constraintTop_toBottomOf="@+id/dialog_layout1">

        <EditText
            android:id="@+id/dialog_amn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="0dp"
            android:drawableStart="@drawable/ic_menu_due"
            android:drawableLeft="@drawable/ic_menu_due"
            android:drawablePadding="5dp"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="false"
            android:textColorHint="#696969"
            android:textSize="14sp" />

    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/sms_send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Send SMS"
        app:layout_constraintEnd_toEndOf="@+id/dialog_layout2"
        app:layout_constraintStart_toStartOf="@+id/dialog_layout2"
        app:layout_constraintTop_toBottomOf="@+id/dialog_layout2" />

</android.support.constraint.ConstraintLayout>